<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.me.sample.android.ttrscoreboard"
    android:versionCode="2"
    android:versionName="1.1" android:installLocation="preferExternal">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sample" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BoardSelectionActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sample" />
        <activity
            android:name=".PlayerSelectionActivity"
            android:label="@string/title_playerselection"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sample" />
        <activity
            android:name=".RouteScoringActivity"
            android:label="@string/title_routescoring"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sample" />
        <activity
            android:name=".TicketScoringActivity"
            android:label="@string/title_ticketscoring"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sample" />
        <activity
            android:name=".BonusScoringActivity"
            android:label="@string/title_bonusscoring"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sample" />
        <activity
            android:name=".FinalScoresActivity"
            android:label="@string/title_finalscores"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sample" />
    </application>

</manifest>